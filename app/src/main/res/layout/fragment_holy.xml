<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp">

    <TextView
        style="?android:listSeparatorTextViewStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/holy_title_label"/>
    <EditText
        android:id="@+id/holy_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/holy_title_hint"/>
    <TextView
        style="?android:listSeparatorTextViewStyle"
        android:text="@string/holy_details_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/holy_act_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <CheckBox
        android:id="@+id/holy_act_blessed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/holy_blessing_label" />
</LinearLayout>
